{{>header}}
{{>navbar}}
<section class="container my-5">
    {{#if postData}}
    <h4 class="">{{postData.name}}</h4>
    <h4 class="">{{postData.age}}</h4>
    <h4 class="">{{postData.phone}}</h4>
    <h4 class="">{{postData.status}}</h4>

    <span class="text-muted">{{postData.date}}</span>
    <p class="text-justify">
        {{postData.content}}
    </p>
    <a href="/" class="btn btn-primary">Back Home</a> 

    {{else}}
    <div class="alert alert-danger text-center">
        <p>Invalid user data</p>
        <a href="/" class="btn btn-primary">Back Home</a>    
    </div>
    {{/if}}
</section>
{{>footer}}